<h2>Movies</h2>
<div class="list">
    <h3>Title:{{movie.title}}</h3>
    <h3>Genre:{{movie.genre}}</h3>
    <h3>Plot:{{movie.plot}}</h3>
    <h3>Cast:{{#each cast}}
        {{name}}
        {{occupation}}
        {{catchPhrase}}
        {{/each}}
    </h3>
    <form action="/movies/{{movie._id}}/delete" method="post">
    <button>Delete movie</button>
    </form>
    <form action="/movies/{{movies._id}}/edit" method="post">
        <button type="submit">Edit</button>
    </form>
</div>